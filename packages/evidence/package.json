{
  "name": "@abcp/evidence",
  "version": "0.1.0",
  "description": "Evidence bundling, C2PA manifest embedding, and Sigstore cosign integration for ABCP.",
  "license": "Apache-2.0",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "pnpm exec eslint \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@abcp/types": "workspace:*",
    "archiver": "^7.0.1",
    "cosmiconfig": "^9.0.0",
    "fs-extra": "^11.2.0",
    "node-fetch": "^3.3.2",
    "p-retry": "^7.1.0",
    "tmp": "^0.2.3",
    "tslib": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/tmp": "^0.2.6",
    "tsup": "^8.1.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.1",
    "@vitest/coverage-v8": "^2.1.1",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^8.46.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1"
  }
