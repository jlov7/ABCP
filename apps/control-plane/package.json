{
  "name": "@abcp/control-plane",
  "version": "0.1.0",
  "description": "LangGraph-based control plane runtime for the Agentic Browser Control Plane (Personal R&D).",
  "private": true,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsx src/server.ts",
    "start": "NODE_ENV=production node dist/server.cjs",
    "lint": "pnpm exec eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "coverage": "vitest run --coverage",
    "graph:viz": "tsx scripts/print-graph.ts"
  },
  "dependencies": {
    "@abcp/evidence": "workspace:*",
    "@abcp/mcp": "workspace:*",
    "@abcp/otel": "workspace:*",
    "@abcp/types": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@langchain/core": "^1.0.1",
    "@langchain/langgraph": "^1.0.0",
    "@langchain/langgraph-checkpoint": "^1.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "node-fetch": "^3.3.2",
    "pino": "^9.5.0",
    "pino-pretty": "^11.2.0",
    "sql.js": "^1.11.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^2.1.1",
    "supertest": "^6.3.3",
    "tsup": "^8.1.0",
    "tsx": "^4.16.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.1"
  }
}
