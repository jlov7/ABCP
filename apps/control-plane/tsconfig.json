{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2022"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts", "vitest.config.ts", "scripts/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
