# Global environment variables for Agentic Browser Control Plane (Personal R&D)

# Node environment
NODE_ENV=development

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_RESOURCE_ATTRIBUTES=service.name=abcp-control-plane,service.namespace=abcp

# Gemini Computer Use driver
GEMINI_API_KEY=replace-with-your-key
GEMINI_PROJECT_ID=replace-with-project-id

# AWS Bedrock AgentCore driver
AWS_REGION=us-west-2
BEDROCK_AGENTCORE_GATEWAY_URL=https://agent-gateway.example.com

# Atlas overlay driver
ATLAS_COMPANION_ENDPOINT=http://localhost:4000

# Evidence signer
COSIGN_KEYLESS=true
REKOR_URL=https://rekor.sigstore.dev

# Database (LangGraph checkpointer)
DATABASE_URL=file:./data/checkpointer.sqlite
